<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="r2">
        <createTable tableName="datatypes.spatial_test_table">

    		<!-- SPATIAL TYPES -->
            <!-- https://dev.mysql.com/doc/refman/8.0/en/spatial-types.html -->

            <column name="GEOMETRY" type="GEOMETRY" />
            <column name="POINT" type="POINT" />
            <column name="LINESTRING" type="LINESTRING" />
            <column name="POLYGON" type="POLYGON" />
            <column name="MULTIPOINT" type="MULTIPOINT" />
            <column name="MULTILINESTRING" type="MULTILINESTRING" />
            <column name="MULTIPOLYGON" type="MULTIPOLYGON" />
            <column name="GEOMETRYCOLLECTION" type="GEOMETRYCOLLECTION" />

        </createTable>
    </changeSet>
</databaseChangeLog>