<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/snowflake
                        http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <!-- Setup: Create base table for schema evolution testing -->
    <changeSet id="setup" author="test-harness">
        <createTable tableName="EVOLUTION_TEST_TABLE">
            <column name="id" type="INT"/>
            <column name="name" type="VARCHAR(100)"/>
        </createTable>
    </changeSet>

    <!-- Test enabling schema evolution -->
    <changeSet id="enable-schema-evolution" author="test-harness">
        <snowflake:alterTable tableName="EVOLUTION_TEST_TABLE"
                             setEnableSchemaEvolution="true"/>
    </changeSet>

    <!-- Test disabling schema evolution -->
    <changeSet id="disable-schema-evolution" author="test-harness">
        <snowflake:alterTable tableName="EVOLUTION_TEST_TABLE"
                             setEnableSchemaEvolution="false"/>
    </changeSet>

</databaseChangeLog>