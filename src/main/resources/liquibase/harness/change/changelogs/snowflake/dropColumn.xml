<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    
    <!-- Include init.xml for cleanup -->
    <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>
    
    <changeSet author="test-harness" id="setup-dropColumn">
        <createTable tableName="posts">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet author="oleh" id="1-dropColumn-v2">
        <addColumn tableName="posts">
            <column name="varcharColumn" type="varchar(25)" value="INITIAL_VALUE"/>
        </addColumn>
        <dropColumn tableName="posts" columnName="varcharColumn"/>
        <rollback/>
    </changeSet>
</databaseChangeLog>