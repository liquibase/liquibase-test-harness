<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:pro-snowflake="http://www.liquibase.org/xml/ns/pro-snowflake"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/pro-snowflake
                        http://www.liquibase.org/xml/ns/pro-snowflake/liquibase-pro-snowflake-latest.xsd">

    <!-- Initial cleanup -->
    <changeSet id="0" author="test-harness">
        <pro-snowflake:dropWarehouse warehouseName="WAREHOUSE_TO_ALTER" ifExists="true"/>
        <pro-snowflake:dropWarehouse warehouseName="WAREHOUSE_TO_RENAME" ifExists="true"/>
        <pro-snowflake:dropWarehouse warehouseName="WAREHOUSE_RENAMED" ifExists="true"/>
        <pro-snowflake:dropWarehouse warehouseName="WAREHOUSE_TO_SUSPEND" ifExists="true"/>
        <sql>USE WAREHOUSE LTHDB_TEST_WH;</sql>
    </changeSet>

    <!-- Create warehouses to alter -->
    <changeSet id="1" author="test">
        <pro-snowflake:createWarehouse warehouseName="WAREHOUSE_TO_ALTER" warehouseSize="SMALL"/>
        <pro-snowflake:createWarehouse warehouseName="WAREHOUSE_TO_RENAME" warehouseSize="XSMALL"/>
        <pro-snowflake:createWarehouse warehouseName="WAREHOUSE_TO_SUSPEND" warehouseSize="XSMALL" autoResume="false"/>
    </changeSet>

    <!-- Rename warehouse -->
    <changeSet id="2" author="test">
        <pro-snowflake:alterWarehouse warehouseName="WAREHOUSE_TO_RENAME" newWarehouseName="WAREHOUSE_RENAMED"/>
        <rollback>
            <pro-snowflake:alterWarehouse warehouseName="WAREHOUSE_RENAMED" newWarehouseName="WAREHOUSE_TO_RENAME"/>
        </rollback>
    </changeSet>

    <!-- Resize warehouse -->
    <changeSet id="3" author="test">
        <pro-snowflake:alterWarehouse warehouseName="WAREHOUSE_TO_ALTER" 
                                  warehouseSize="SMALL" 
                                  autoSuspend="300"/>
        <rollback>
            <pro-snowflake:alterWarehouse warehouseName="WAREHOUSE_TO_ALTER" 
                                      warehouseSize="SMALL" 
                                      autoSuspend="600"/>
        </rollback>
    </changeSet>

    <!-- Configure multi-cluster -->
    <changeSet id="4" author="test">
        <pro-snowflake:alterWarehouse warehouseName="WAREHOUSE_TO_ALTER" 
                                  minClusterCount="1" 
                                  maxClusterCount="3" 
                                  scalingPolicy="STANDARD"/>
    </changeSet>

    <!-- Set properties with IF EXISTS -->
    <changeSet id="5" author="test">
        <pro-snowflake:alterWarehouse warehouseName="WAREHOUSE_TO_ALTER" 
                                  ifExists="true"
                                  comment="Updated warehouse"
                                  enableQueryAcceleration="true"
                                  queryAccelerationMaxScaleFactor="8"/>
    </changeSet>

    <!-- Suspend warehouse -->
    <changeSet id="6" author="test">
        <sql>USE WAREHOUSE LTHDB_TEST_WH;</sql>
        <pro-snowflake:alterWarehouse warehouseName="WAREHOUSE_TO_SUSPEND" action="SUSPEND"/>
        <rollback>
            <pro-snowflake:alterWarehouse warehouseName="WAREHOUSE_TO_SUSPEND" action="RESUME"/>
        </rollback>
    </changeSet>

    <!-- Resume warehouse -->
    <changeSet id="7" author="test">
        <sql>USE WAREHOUSE LTHDB_TEST_WH;</sql>
        <pro-snowflake:alterWarehouse warehouseName="WAREHOUSE_TO_SUSPEND" action="RESUME"/>
    </changeSet>

    <!-- UNSET operations -->
    <changeSet id="8" author="test">
        <pro-snowflake:alterWarehouse warehouseName="WAREHOUSE_TO_ALTER" 
                                  unsetComment="true"/>
    </changeSet>

    <!-- Change warehouse type - NOTE: warehouseType cannot be altered after creation -->
    <!-- This changeset was removed as ALTER WAREHOUSE does not support changing warehouse type -->

    <!-- Cleanup -->
    <changeSet id="99" author="test">
        <pro-snowflake:dropWarehouse warehouseName="WAREHOUSE_TO_ALTER" ifExists="true"/>
        <pro-snowflake:dropWarehouse warehouseName="WAREHOUSE_RENAMED" ifExists="true"/>
        <pro-snowflake:dropWarehouse warehouseName="WAREHOUSE_TO_SUSPEND" ifExists="true"/>
        <sql>USE WAREHOUSE LTHDB_TEST_WH;</sql>
    </changeSet>

</databaseChangeLog>