<?xml version="1.0" encoding="UTF-8"?>
<!-- Schema Isolated Test - Account-level objects still need cleanup -->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">
    <!-- Clean up any warehouses this test might create -->
    <changeSet author="test-harness" id="cleanup-test-warehouses" runAlways="true">
        <sql>
            DROP WAREHOUSE IF EXISTS LTHDB_ALTER_TEST_WH;
        </sql>
    </changeSet>

    <changeSet author="test-harness" id="alterWarehouse-setup-v2">
        <snowflake:createWarehouse warehouseName="LTHDB_ALTER_TEST_WH"
                        warehouseSize="XSMALL"
                        autoSuspend="60"
                        autoResume="true"
                        initiallySuspended="false"
                        comment="Warehouse to be altered"/>
    </changeSet>

    <changeSet author="test-harness" id="alterWarehouse-size-v2">
        <snowflake:alterWarehouse warehouseName="LTHDB_ALTER_TEST_WH"
                       warehouseSize="MEDIUM"/>
        <rollback>
            <snowflake:alterWarehouse warehouseName="LTHDB_ALTER_TEST_WH"
                           warehouseSize="XSMALL"/>
        </rollback>
    </changeSet>

    <changeSet author="test-harness" id="alterWarehouse-properties-v2">
        <snowflake:alterWarehouse warehouseName="LTHDB_ALTER_TEST_WH"
                       autoSuspend="300"
                       autoResume="true"
                       comment="Modified test warehouse"/>
        <rollback>
            <snowflake:alterWarehouse warehouseName="LTHDB_ALTER_TEST_WH"
                           autoSuspend="60"
                           autoResume="true"
                           comment="Warehouse to be altered"/>
        </rollback>
    </changeSet>

    <changeSet author="test-harness" id="alterWarehouse-clustering-v2">
        <snowflake:alterWarehouse warehouseName="LTHDB_ALTER_TEST_WH"
                       warehouseType="STANDARD"
                       minClusterCount="1"
                       maxClusterCount="4"
                       scalingPolicy="ECONOMY"/>
        <rollback>
            <snowflake:alterWarehouse warehouseName="LTHDB_ALTER_TEST_WH"
                           warehouseType="STANDARD"
                           minClusterCount="1"
                           maxClusterCount="1"/>
        </rollback>
    </changeSet>

    <changeSet author="test-harness" id="alterWarehouse-cleanup-v2">
        <snowflake:dropWarehouse warehouseName="LTHDB_ALTER_TEST_WH" ifExists="true"/>
        <sql>USE WAREHOUSE LTHDB_TEST_WH</sql>
    </changeSet>

</databaseChangeLog>