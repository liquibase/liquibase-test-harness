<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">
    
    <!-- Include init.xml for cleanup -->
    <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>

    <!-- Basic sequence test -->
    <changeSet author="test-harness" id="createSequence-basic">
        <createSequence sequenceName="TEST_BASIC_SEQUENCE"
                       startValue="1"
                       incrementBy="1"/>
        <rollback>
            <dropSequence sequenceName="TEST_BASIC_SEQUENCE"/>
        </rollback>
    </changeSet>

    <!-- Sequence with larger increment -->
    <changeSet author="test-harness" id="createSequence-increment">
        <createSequence sequenceName="TEST_INCREMENT_SEQUENCE"
                       startValue="100"
                       incrementBy="5"/>
        <rollback>
            <dropSequence sequenceName="TEST_INCREMENT_SEQUENCE"/>
        </rollback>
    </changeSet>

    <!-- Sequence with different start value -->
    <changeSet author="test-harness" id="createSequence-start">
        <createSequence sequenceName="TEST_START_SEQUENCE"
                       startValue="1000"
                       incrementBy="1"/>
        <rollback>
            <dropSequence sequenceName="TEST_START_SEQUENCE"/>
        </rollback>
    </changeSet>

    <!-- Cleanup -->
    <changeSet author="test-harness" id="cleanup-sequences">
        <dropSequence sequenceName="TEST_BASIC_SEQUENCE"/>
        <dropSequence sequenceName="TEST_INCREMENT_SEQUENCE"/>
        <dropSequence sequenceName="TEST_START_SEQUENCE"/>
    </changeSet>

</databaseChangeLog>