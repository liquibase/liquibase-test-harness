<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/snowflake
        http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <!-- Include init.xml for cleanup -->
    <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>
    
    <!-- Test 1: Using sql tag -->
    <changeSet id="1" author="test-harness" runAlways="true">
        <sql>CREATE SCHEMA TEST_SCHEMA_SQL</sql>
    </changeSet>

    <!-- Test 2: Using snowflake:createSchema tag -->
    <changeSet id="2" author="test-harness" runAlways="true">
        <snowflake:createSchema schemaName="TEST_SCHEMA_NAMESPACE"/>
    </changeSet>

</databaseChangeLog>