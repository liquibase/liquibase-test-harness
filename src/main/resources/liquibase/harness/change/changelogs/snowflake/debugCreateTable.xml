<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">
    
    <!-- Test 1: Standard createTable -->
    <changeSet author="test" id="test1">
        <createTable tableName="STANDARD_TABLE">
            <column name="id" type="INTEGER"/>
        </createTable>
    </changeSet>

    <!-- Test 2: snowflake:createTable with just tableName -->
    <changeSet author="test" id="test2">
        <snowflake:createTable tableName="SNOWFLAKE_TABLE">
            <column name="id" type="INTEGER"/>
        </snowflake:createTable>
    </changeSet>

    <!-- Test 3: snowflake:createTable with Snowflake attributes -->
    <changeSet author="test" id="test3">
        <snowflake:createTable tableName="SNOWFLAKE_TABLE_WITH_ATTRS" 
                               transient="true"
                               remarks="Test table">
            <column name="id" type="INTEGER"/>
        </snowflake:createTable>
    </changeSet>

</databaseChangeLog>