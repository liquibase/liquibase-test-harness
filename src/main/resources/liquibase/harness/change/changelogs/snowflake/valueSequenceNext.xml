<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    
    <!-- Include init.xml for cleanup -->
    <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>

    <changeSet id="1" author="oleh">
        <createTable tableName="valueSequenceNextTable">
            <column name="test_id" type="int"/>
            <column name="test_column" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="oleh">
        <createSequence incrementBy="2"
          sequenceName="value_test_sequence"
          startValue="30"/>
        <rollback>
            <dropSequence sequenceName="value_test_sequence"/>
        </rollback>
    </changeSet>


    <changeSet id="3" author="oleh">
        <update tableName="valueSequenceNextTable">
            <column name="test_id" valueSequenceNext="value_test_sequence"/>
        </update>
        <rollback/>
    </changeSet>

</databaseChangeLog>