<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/snowflake
                        http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <!-- Setup: Create base table for advanced features testing -->
    <changeSet id="setup" author="test-harness">
        <createTable tableName="ADVANCED_TEST_TABLE">
            <column name="id" type="INT"/>
            <column name="user_id" type="VARCHAR(100)"/>
            <column name="department" type="VARCHAR(100)"/>
            <column name="data" type="VARCHAR(255)"/>
            <column name="location" type="GEOGRAPHY"/>
        </createTable>
    </changeSet>

    <!-- Test search optimization -->
    <changeSet id="search-optimization" author="test-harness">
        <snowflake:alterTable tableName="ADVANCED_TEST_TABLE"
                             addSearchOptimization="EQUALITY(user_id, department)"/>
    </changeSet>

