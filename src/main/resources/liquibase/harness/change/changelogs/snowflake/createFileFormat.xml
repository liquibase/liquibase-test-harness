<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/snowflake
                        http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <!-- Cleanup: Remove test file format if it exists -->
    <changeSet id="cleanup-file-format" author="test-harness" runAlways="true">
        <sql>DROP FILE FORMAT IF EXISTS TEST_CSV_FORMAT</sql>
    </changeSet>

    <!-- Test: Create basic CSV file format -->
    <changeSet id="create-file-format-test" author="test-harness">
        <snowflake:createFileFormat 
            fileFormatName="TEST_CSV_FORMAT"
            fileFormatType="CSV"
            fieldDelimiter=","
            skipHeader="1"
            trimSpace="true"
            comment="Test CSV format for harness validation"/>
    </changeSet>

</databaseChangeLog>