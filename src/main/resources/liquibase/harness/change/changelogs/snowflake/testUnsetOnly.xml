<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">
    
    <!-- Include init.xml for cleanup -->
    <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>

    <!-- Clean up any schemas this test might create -->
    <changeSet author="test-harness" id="cleanup-test-unset-schema" runAlways="true">
        <sql>
            DROP SCHEMA IF EXISTS TEST_UNSET_SCHEMA CASCADE;
        </sql>
    </changeSet>

    <!-- Setup: Create test schema with data retention -->
    <changeSet author="test-harness" id="testUnsetOnly-setup">
        <sql>
            CREATE SCHEMA IF NOT EXISTS TEST_UNSET_SCHEMA 
                DATA_RETENTION_TIME_IN_DAYS = 7;
        </sql>
    </changeSet>

    <!-- Test: Unset data retention (the problematic changeset) -->
    <changeSet author="test-harness" id="testUnsetOnly-unset">
        <snowflake:alterSchema schemaName="TEST_UNSET_SCHEMA" 
                     newComment="Test comment to test validation"/>
    </changeSet>

    <!-- Cleanup -->
    <changeSet author="test-harness" id="testUnsetOnly-cleanup">
        <snowflake:dropSchema schemaName="TEST_UNSET_SCHEMA"/>
    </changeSet>

    <!-- Include cleanup.xml at the end -->
    <include file="liquibase/harness/change/changelogs/snowflake/cleanup.xml"/>
</databaseChangeLog>