<?xml version="1.0" encoding="UTF-8"?>
<!-- Schema Isolated Test - Account-level objects still need cleanup -->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">
    <!-- Clean up any warehouses this test might create -->
    <changeSet author="test-harness" id="cleanup-test-warehouses" runAlways="true">
        <sql>
            USE WAREHOUSE LTHDB_TEST_WH;
            DROP WAREHOUSE IF EXISTS LTHDB_DROP_TEST_WH;
            DROP WAREHOUSE IF EXISTS LTHDB_NONEXISTENT_WH;
        </sql>
    </changeSet>

    <changeSet author="test-harness" id="dropWarehouse-setup" runAlways="true">
        <snowflake:createWarehouse warehouseName="LTHDB_DROP_TEST_WH"
                        warehouseSize="XSMALL"
                        autoSuspend="60"
                        autoResume="true"
                        initiallySuspended="false"
                        comment="Warehouse to be dropped"/>
    </changeSet>

    <changeSet author="test-harness" id="dropWarehouse-ensure-context" runAlways="true">
        <sql>USE WAREHOUSE LTHDB_TEST_WH</sql>
    </changeSet>

    <changeSet author="test-harness" id="dropWarehouse-basic" runAlways="true">
        <snowflake:dropWarehouse warehouseName="LTHDB_DROP_TEST_WH" ifExists="true"/>
        <rollback>
            <snowflake:createWarehouse warehouseName="LTHDB_DROP_TEST_WH"
                            warehouseSize="XSMALL"
                            autoSuspend="60"
                            autoResume="true"
                            comment="Warehouse to be dropped"/>
        </rollback>
    </changeSet>

    <changeSet author="test-harness" id="dropWarehouse-ifExists" runAlways="true">
        <snowflake:dropWarehouse warehouseName="LTHDB_NONEXISTENT_WH"
                      ifExists="true"/>
    </changeSet>

    <!-- Restore warehouse context after dropping test warehouses -->
    <changeSet author="test-harness" id="dropWarehouse-restore-warehouse">
        <sql>USE WAREHOUSE LTHDB_TEST_WH</sql>
    </changeSet>

</databaseChangeLog>