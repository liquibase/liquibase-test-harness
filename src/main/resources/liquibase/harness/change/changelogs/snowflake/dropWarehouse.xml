<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <changeSet author="test-harness" id="dropWarehouse-setup">
        <snowflake:createWarehouse warehouseName="LTHDB_DROP_TEST_WH"
                        warehouseSize="XSMALL"
                        autoSuspend="60"
                        autoResume="true"
                        comment="Warehouse to be dropped"/>
    </changeSet>

    <changeSet author="test-harness" id="dropWarehouse-basic">
        <snowflake:dropWarehouse warehouseName="LTHDB_DROP_TEST_WH" ifExists="true"/>
        <rollback>
            <snowflake:createWarehouse warehouseName="LTHDB_DROP_TEST_WH"
                            warehouseSize="XSMALL"
                            autoSuspend="60"
                            autoResume="true"
                            comment="Warehouse to be dropped"/>
        </rollback>
    </changeSet>

    <changeSet author="test-harness" id="dropWarehouse-ifExists">
        <snowflake:dropWarehouse warehouseName="LTHDB_NONEXISTENT_WH"
                      ifExists="true"/>
    </changeSet>

</databaseChangeLog>