<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    
    <!-- Include init.xml for cleanup -->
    <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>
    
    <changeSet author="test-harness" id="setup-dropView-v3">
        <createTable tableName="authors_dropview">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)"/>
        </createTable>
    </changeSet>

    <changeSet id="2-dropView-v3" author="oleh">
        <createView viewName="test_view">
            select id, first_name, last_name, email from authors_dropview
        </createView>
        <dropView viewName="test_view"/>
        <rollback/>
    </changeSet>
</databaseChangeLog>