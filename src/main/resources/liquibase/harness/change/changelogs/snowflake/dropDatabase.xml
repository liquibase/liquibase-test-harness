<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/snowflake
                        http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <changeSet id="1" author="test">
        <snowflake:createDatabase databaseName="DROP_TEST_DB" comment="Database to be dropped"/>
    </changeSet>

    <changeSet id="2" author="test">
        <snowflake:dropDatabase databaseName="DROP_TEST_DB"/>
        <rollback>
            <snowflake:createDatabase databaseName="DROP_TEST_DB" comment="Database to be dropped"/>
        </rollback>
    </changeSet>

    <changeSet id="3" author="test">
        <snowflake:createDatabase databaseName="DROP_IF_EXISTS_DB" comment="Database to be dropped with IF EXISTS"/>
    </changeSet>

    <changeSet id="4" author="test">
        <snowflake:dropDatabase databaseName="DROP_IF_EXISTS_DB" ifExists="true"/>
        <rollback>
            <snowflake:createDatabase databaseName="DROP_IF_EXISTS_DB" comment="Database to be dropped with IF EXISTS"/>
        </rollback>
    </changeSet>

    <changeSet id="5" author="test">
        <snowflake:createDatabase databaseName="CASCADE_DROP_DB" comment="Database to be dropped with CASCADE"/>
        <!-- Note: CASCADE and RESTRICT are not standard Snowflake features for databases -->
    </changeSet>

    <changeSet id="6" author="test">
        <snowflake:dropDatabase databaseName="CASCADE_DROP_DB"/>
        <rollback>
            <snowflake:createDatabase databaseName="CASCADE_DROP_DB" comment="Database to be dropped with CASCADE"/>
        </rollback>
    </changeSet>

    <!-- Final cleanup -->
    <changeSet id="99" author="test">
        <snowflake:dropDatabase databaseName="DROP_TEST_DB" ifExists="true"/>
        <snowflake:dropDatabase databaseName="DROP_IF_EXISTS_DB" ifExists="true"/>
        <snowflake:dropDatabase databaseName="CASCADE_DROP_DB" ifExists="true"/>
    </changeSet>

</databaseChangeLog>