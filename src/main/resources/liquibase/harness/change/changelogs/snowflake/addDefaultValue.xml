<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    
    <!-- Include init.xml for cleanup -->
    <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>

    <!-- Create POSTS table for the test -->
    <changeSet id="createPostsTable-addDefaultValue-v2" author="test-harness">
        <createTable tableName="posts">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="author_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(255)"/>
            <column name="content" type="text"/>
        </createTable>
    </changeSet>

    <!--https://docs.liquibase.com/change-types/add-default-value.html-->
    <changeSet author="oleh" id="1-v2">
        <addDefaultValue  tableName="posts"
                          columnName="title"
                          columnDataType="varchar(255)"
                          defaultValue="title_test"/>
    </changeSet>
</databaseChangeLog>
