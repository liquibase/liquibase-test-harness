<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <!-- Include init.xml for cleanup -->
    <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>

    <!-- Clean up any databases this test might create -->
    <changeSet author="test-harness" id="cleanup-test-databases" runAlways="true">
        <sql>
            DROP DATABASE IF EXISTS TEST_REPLACE_DB;
        </sql>
    </changeSet>

    <!-- First create a database -->
    <changeSet author="test-harness" id="createDatabase-initial">
        <snowflake:createDatabase databaseName="TEST_REPLACE_DB" 
                                  comment="Initial database to be replaced"/>
        <rollback>
            <snowflake:dropDatabase databaseName="TEST_REPLACE_DB" ifExists="true"/>
        </rollback>
    </changeSet>

    <!-- Then replace it with new configuration -->
    <changeSet author="test-harness" id="createOrReplaceDatabase">
        <snowflake:createDatabase databaseName="TEST_REPLACE_DB"
                                  orReplace="true"
                                  comment="Replaced database with new configuration"
                                  dataRetentionTimeInDays="7"/>
        <rollback>
            <snowflake:dropDatabase databaseName="TEST_REPLACE_DB" ifExists="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>