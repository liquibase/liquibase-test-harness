<?xml version="1.0" encoding="UTF-8"?>
<!-- Schema Isolated Test - Account-level objects still need cleanup -->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">
    <!-- Clean up any databases this test might create -->
    <changeSet author="test-harness" id="cleanup-test-databases" runAlways="true">
        <sql>
            DROP DATABASE IF EXISTS LTHDB_ALTER_TEST_DB;
            DROP DATABASE IF EXISTS LTHDB_ALTER_TEST_DB_RENAMED;
        </sql>
    </changeSet>

    <changeSet author="test-harness" id="alterDatabase-setup">
        <snowflake:createDatabase databaseName="LTHDB_ALTER_TEST_DB"
                       comment="Database to be altered"/>
    </changeSet>

    <changeSet author="test-harness" id="alterDatabase-rename">
        <snowflake:alterDatabase databaseName="LTHDB_ALTER_TEST_DB"
                               newDatabaseName="LTHDB_ALTER_TEST_DB_RENAMED"/>
        <rollback>
            <snowflake:alterDatabase databaseName="LTHDB_ALTER_TEST_DB_RENAMED"
                                   newDatabaseName="LTHDB_ALTER_TEST_DB"/>
        </rollback>
    </changeSet>

    <changeSet author="test-harness" id="alterDatabase-comment">
        <snowflake:alterDatabase databaseName="LTHDB_ALTER_TEST_DB_RENAMED"
                      comment="Modified test database"/>
        <rollback>
            <snowflake:alterDatabase databaseName="LTHDB_ALTER_TEST_DB_RENAMED"
                          comment="Database to be altered"/>
        </rollback>
    </changeSet>

    <changeSet author="test-harness" id="alterDatabase-retention">
        <snowflake:alterDatabase databaseName="LTHDB_ALTER_TEST_DB_RENAMED"
                      dataRetentionTimeInDays="30"/>
        <rollback>
            <snowflake:alterDatabase databaseName="LTHDB_ALTER_TEST_DB_RENAMED"
                          dataRetentionTimeInDays="1"/>
        </rollback>
    </changeSet>

    <changeSet author="test-harness" id="alterDatabase-cleanup">
        <snowflake:dropDatabase databaseName="LTHDB_ALTER_TEST_DB_RENAMED" ifExists="true"/>
    </changeSet>

</databaseChangeLog>