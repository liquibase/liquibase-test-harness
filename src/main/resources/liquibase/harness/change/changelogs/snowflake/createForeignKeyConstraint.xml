<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Include init.xml for cleanup -->
    <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>

    <!-- Setup tables for foreign key testing -->
    <changeSet author="test-harness" id="createForeignKeyConstraint-setup">
        <createTable tableName="authors">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createTable tableName="posts">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="author_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(255)"/>
            <column name="content" type="text"/>
        </createTable>
    </changeSet>

    <!-- Create foreign key constraint without onDelete/onUpdate (Snowflake limitation) -->
    <changeSet author="test-harness" id="createForeignKeyConstraint">
        <addForeignKeyConstraint baseTableName="posts"
                                baseColumnNames="author_id"
                                constraintName="fk_posts_authors"
                                referencedTableName="authors"
                                referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="posts" constraintName="fk_posts_authors"/>
        </rollback>
    </changeSet>

</databaseChangeLog>