<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/snowflake
                        http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <!-- Cleanup: Remove test file format if it exists -->
    <changeSet id="cleanup-if-not-exists-file-format" author="test-harness" runAlways="true">
        <sql>DROP FILE FORMAT IF EXISTS TEST_IF_NOT_EXISTS_FORMAT</sql>
    </changeSet>

    <!-- Test: Create file format with IF NOT EXISTS -->
    <changeSet id="create-file-format-if-not-exists-test" author="test-harness">
        <snowflake:createFileFormat 
            fileFormatName="TEST_IF_NOT_EXISTS_FORMAT"
            ifNotExists="true"
            fileFormatType="AVRO"
            compression="GZIP"
            comment="Test IF NOT EXISTS functionality"/>
    </changeSet>

</databaseChangeLog>