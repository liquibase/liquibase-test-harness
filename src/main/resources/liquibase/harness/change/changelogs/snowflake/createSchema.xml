<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <!-- Include init.xml for cleanup -->
    <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>

    <!-- Clean up any schemas this test might create -->
    <changeSet author="test-harness" id="cleanup-test-schemas" runAlways="true">
        <sql>
            DROP SCHEMA IF EXISTS TEST_BASIC_SCHEMA CASCADE;
            DROP SCHEMA IF EXISTS TEST_SCHEMA_WITH_REMARKS CASCADE;
        </sql>
    </changeSet>

    <!-- Basic schema creation -->
    <changeSet author="test-harness" id="createSchema-basic">
        <snowflake:createSchema schemaName="TEST_BASIC_SCHEMA"/>
        <rollback>
            <sql>DROP SCHEMA IF EXISTS TEST_BASIC_SCHEMA CASCADE</sql>
        </rollback>
    </changeSet>

    <!-- Schema with remarks -->
    <changeSet author="test-harness" id="createSchema-with-remarks">
        <snowflake:createSchema schemaName="TEST_SCHEMA_WITH_REMARKS"
                               comment="Basic test schema created by Liquibase"/>
        <rollback>
            <sql>DROP SCHEMA IF EXISTS TEST_SCHEMA_WITH_REMARKS CASCADE</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>