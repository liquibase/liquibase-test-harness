<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/snowflake
                        http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <changeSet id="1" author="test">
        <snowflake:createSchema schemaName="BASIC_SCHEMA"/>
        <rollback>
            <snowflake:dropSchema schemaName="BASIC_SCHEMA"/>
        </rollback>
    </changeSet>

    <changeSet id="2" author="test">
        <snowflake:createSchema schemaName="CONFIGURED_SCHEMA" 
                                comment="Test schema with configuration" 
                                dataRetentionTimeInDays="7"
                                maxDataExtensionTimeInDays="30"/>
        <rollback>
            <snowflake:dropSchema schemaName="CONFIGURED_SCHEMA"/>
        </rollback>
    </changeSet>

    <changeSet id="3" author="test">
        <snowflake:createSchema schemaName="TRANSIENT_SCHEMA" 
                                transient="true" 
                                comment="Transient schema for testing"/>
        <rollback>
            <snowflake:dropSchema schemaName="TRANSIENT_SCHEMA"/>
        </rollback>
    </changeSet>

    <changeSet id="4" author="test">
        <snowflake:createSchema schemaName="MANAGED_SCHEMA" 
                                managed="true"
                                comment="Managed access schema"/>
        <rollback>
            <snowflake:dropSchema schemaName="MANAGED_SCHEMA"/>
        </rollback>
    </changeSet>

    <changeSet id="5" author="test">
        <snowflake:createSchema schemaName="REPLACE_SCHEMA" 
                                orReplace="true"
                                comment="Schema with OR REPLACE"/>
        <rollback>
            <snowflake:dropSchema schemaName="REPLACE_SCHEMA"/>
        </rollback>
    </changeSet>

    <changeSet id="6" author="test">
        <snowflake:createSchema schemaName="IF_NOT_EXISTS_SCHEMA" 
                                ifNotExists="true"
                                dataRetentionTimeInDays="14"
                                defaultDdlCollation="utf8"/>
        <rollback>
            <snowflake:dropSchema schemaName="IF_NOT_EXISTS_SCHEMA" ifExists="true"/>
        </rollback>
    </changeSet>

    <changeSet id="7" author="test">
        <snowflake:createSchema schemaName="CLONE_SCHEMA" 
                                fromSchema="BASIC_SCHEMA"
                                comment="Cloned schema for testing"/>
        <rollback>
            <snowflake:dropSchema schemaName="CLONE_SCHEMA"/>
        </rollback>
    </changeSet>

    <!-- Cleanup -->
    <changeSet id="99" author="test">
        <snowflake:dropSchema schemaName="BASIC_SCHEMA" ifExists="true"/>
        <snowflake:dropSchema schemaName="CONFIGURED_SCHEMA" ifExists="true"/>
        <snowflake:dropSchema schemaName="TRANSIENT_SCHEMA" ifExists="true"/>
        <snowflake:dropSchema schemaName="MANAGED_SCHEMA" ifExists="true"/>
        <snowflake:dropSchema schemaName="REPLACE_SCHEMA" ifExists="true"/>
        <snowflake:dropSchema schemaName="IF_NOT_EXISTS_SCHEMA" ifExists="true"/>
        <snowflake:dropSchema schemaName="CLONE_SCHEMA" ifExists="true"/>
    </changeSet>

</databaseChangeLog>