<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/snowflake
                        http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <!-- Cleanup: Remove test file format if it exists -->
    <changeSet id="cleanup-or-replace-file-format" author="test-harness" runAlways="true">
        <sql>DROP FILE FORMAT IF EXISTS TEST_REPLACE_FORMAT</sql>
    </changeSet>

    <!-- Setup: Create initial file format to be replaced -->
    <changeSet id="setup-initial-file-format" author="test-harness">
        <sql>CREATE FILE FORMAT TEST_REPLACE_FORMAT TYPE = CSV</sql>
    </changeSet>

    <!-- Test: Create or replace file format -->
    <changeSet id="create-or-replace-file-format-test" author="test-harness">
        <snowflake:createFileFormat 
            fileFormatName="TEST_REPLACE_FORMAT"
            orReplace="true"
            fileFormatType="PARQUET"
            comment="Replaced file format"/>
    </changeSet>

</databaseChangeLog>