<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/snowflake
                        http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <changeSet id="1" author="test">
        <snowflake:createSchema schemaName="TEST_ALTER_SCHEMA" comment="Initial schema"/>
    </changeSet>

    <changeSet id="2" author="test">
        <snowflake:alterSchema schemaName="TEST_ALTER_SCHEMA" newSchemaName="TEST_RENAMED_SCHEMA"/>
        <rollback>
            <snowflake:alterSchema schemaName="TEST_RENAMED_SCHEMA" newSchemaName="TEST_ALTER_SCHEMA"/>
        </rollback>
    </changeSet>

    <changeSet id="3" author="test">
        <snowflake:alterSchema schemaName="TEST_RENAMED_SCHEMA" 
                               dataRetentionTimeInDays="7" 
                               comment="Updated schema with retention"/>
        <rollback>
            <snowflake:alterSchema schemaName="TEST_RENAMED_SCHEMA" 
                                   dataRetentionTimeInDays="1" 
                                   comment="Initial schema"/>
        </rollback>
    </changeSet>

    <changeSet id="4" author="test">
        <snowflake:alterSchema schemaName="TEST_RENAMED_SCHEMA" 
                               ifExists="true"
                               unsetComment="true"/>
        <rollback>
            <snowflake:alterSchema schemaName="TEST_RENAMED_SCHEMA" 
                                   comment="Updated schema with retention"/>
        </rollback>
    </changeSet>

    <changeSet id="5" author="test">
        <snowflake:alterSchema schemaName="TEST_RENAMED_SCHEMA" 
                               newMaxDataExtensionTimeInDays="30"
                               newDefaultDdlCollation="en-ci"/>
        <rollback>
            <snowflake:alterSchema schemaName="TEST_RENAMED_SCHEMA" 
                                   unsetMaxDataExtensionTimeInDays="true"
                                   unsetDefaultDdlCollation="true"/>
        </rollback>
    </changeSet>

    <changeSet id="6" author="test">
        <snowflake:alterSchema schemaName="TEST_RENAMED_SCHEMA" 
                               enableManagedAccess="true"/>
        <rollback>
            <snowflake:alterSchema schemaName="TEST_RENAMED_SCHEMA" 
                                   disableManagedAccess="true"/>
        </rollback>
    </changeSet>

    <changeSet id="7" author="test">
        <snowflake:alterSchema schemaName="TEST_RENAMED_SCHEMA" 
                               unsetDataRetentionTimeInDays="true"
                               unsetMaxDataExtensionTimeInDays="true"
                               unsetDefaultDdlCollation="true"/>
    </changeSet>

    <changeSet id="8" author="test">
        <snowflake:dropSchema schemaName="TEST_RENAMED_SCHEMA" ifExists="true"/>
    </changeSet>

</databaseChangeLog>