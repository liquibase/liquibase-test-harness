<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    
         <!-- Include init.xml for cleanup -->
         <include file="liquibase/harness/change/changelogs/snowflake/init.xml"/>

    <changeSet author="test-harness" id="setup-addPrimaryKey-v2">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="posts"/>
            </not>
        </preConditions>
        <createTable tableName="posts">
            <column name="id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="inserted_date" type="date"/>
            <column name="title" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="oleh" id="1-v3">
        <addPrimaryKey
                columnNames="id"
                constraintName="pk_posts"
                tableName="posts"
                validate="true"/>
    </changeSet>
</databaseChangeLog>