<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--https://docs.liquibase.com/change-types/add-default-value.html-->
    <!-- Different from default name of current date function -->
    <changeSet author="as" id="1">
        <addDefaultValue  tableName="posts"
                          columnName="inserted_date"
                          columnDataType="date"
                          defaultValueComputed="CURRENT DATE"/>
    </changeSet>
</databaseChangeLog>
