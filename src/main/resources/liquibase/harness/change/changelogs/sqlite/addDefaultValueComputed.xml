<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
<!--https://docs.liquibase.com/change-types/add-default-value.html-->
    <changeSet author="as" id="1">
        <createTable tableName="add_default_value_computed">
            <column name="intColumn" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="dateColumn" type="date"/>
        </createTable>
        <rollback>
            <dropTable tableName="add_default_value_computed"/>
        </rollback>
    </changeSet>
    <changeSet author="as" id="2">
        <addDefaultValue  tableName="add_default_value_computed"
                          columnName="dateColumn"
                          columnDataType="date"
                          defaultValueComputed="CURRENT_TIMESTAMP"/>
        <rollback/>
    </changeSet>
</databaseChangeLog>
