<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <changeSet id="cleanup-complex-warehouse" author="test-harness" runAlways="true">
        <sql>
            DROP WAREHOUSE IF EXISTS TEST_COMPLEX_WH CASCADE;
            USE WAREHOUSE LTHDB_TEST_WH;
        </sql>
    </changeSet>

    <changeSet id="create-complex-warehouse" author="test-harness">
        <snowflake:createWarehouse warehouseName="TEST_COMPLEX_WH"
                        warehouseType="SNOWPARK-OPTIMIZED"
                        warehouseSize="MEDIUM"
                        minClusterCount="2"
                        maxClusterCount="5"
                        autoSuspend="600"
                        autoResume="false"
                        enableQueryAcceleration="true"
                        queryAccelerationMaxScaleFactor="8"
                        scalingPolicy="ECONOMY"
                        comment="Complex test warehouse with all optional properties"/>
        <rollback>
            <snowflake:dropWarehouse warehouseName="TEST_COMPLEX_WH"/>
        </rollback>
    </changeSet>

</databaseChangeLog>