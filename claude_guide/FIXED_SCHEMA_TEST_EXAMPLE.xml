<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:snowflake="http://www.liquibase.org/xml/ns/snowflake"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/snowflake
                      http://www.liquibase.org/xml/ns/snowflake/liquibase-snowflake-latest.xsd">

    <!-- Example: createWarehouse test with its own schema -->
    
    <!-- Step 1: Create and use test-specific schema -->
    <changeSet id="setup-schema-createWarehouse" author="test-harness" runAlways="true">
        <sql>DROP SCHEMA IF EXISTS TEST_CREATE_WAREHOUSE CASCADE</sql>
        <sql>CREATE SCHEMA TEST_CREATE_WAREHOUSE</sql>
        <sql>USE SCHEMA TEST_CREATE_WAREHOUSE</sql>
        <rollback>
            <sql>DROP SCHEMA IF EXISTS TEST_CREATE_WAREHOUSE CASCADE</sql>
        </rollback>
    </changeSet>

    <!-- Step 2: Run the actual test -->
    <changeSet id="test-createWarehouse" author="test-harness">
        <snowflake:createWarehouse 
            warehouseName="LTHDB_TEST_WAREHOUSE"
            warehouseSize="XSMALL"
            autoSuspend="60"
            autoResume="true"
            comment="Test warehouse for harness"/>
        <rollback>
            <snowflake:dropWarehouse warehouseName="LTHDB_TEST_WAREHOUSE"/>
        </rollback>
    </changeSet>

    <!-- Step 3: Cleanup (optional but good practice) -->
    <changeSet id="cleanup-schema-createWarehouse" author="test-harness" runAlways="true">
        <sql>USE SCHEMA TESTHARNESS</sql>  <!-- Switch back to default -->
        <sql>DROP SCHEMA IF EXISTS TEST_CREATE_WAREHOUSE CASCADE</sql>
        <rollback/>
    </changeSet>

</databaseChangeLog>