<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Pattern for complete schema reset for each test -->
    
    <!-- Step 1: Drop and recreate the entire schema -->
    <changeSet id="reset-schema-${testName}" author="test-harness" runAlways="true">
        <preConditions onFail="CONTINUE">
            <sqlCheck expectedResult="1">SELECT 1</sqlCheck>
        </preConditions>
        <sql>
            -- Drop the entire schema including all objects and tracking tables
            DROP SCHEMA IF EXISTS TESTHARNESS CASCADE;
            
            -- Recreate the schema fresh
            CREATE SCHEMA TESTHARNESS;
            
            -- Switch to the new schema
            USE SCHEMA TESTHARNESS;
        </sql>
        <rollback/>
    </changeSet>
    
    <!-- Step 2: Run your test -->
    <changeSet id="test-${testName}" author="test-harness">
        <!-- Your test changes here -->
        <createSequence sequenceName="test_sequence"/>
    </changeSet>
    
</databaseChangeLog>